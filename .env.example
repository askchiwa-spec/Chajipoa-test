# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chajipoa_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

MONGODB_URI=mongodb://localhost:27017/chajipoa
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# AzamPay Configuration
AZAMPAY_BASE_URL=https://api.azampay.co.tz
AZAMPAY_API_KEY=your_azampay_api_key
AZAMPAY_MERCHANT_ID=your_merchant_id
AZAMPAY_CALLBACK_URL=http://localhost:3000/api/v1/payments/callback
AZAMPAY_WEBHOOK_URL=http://localhost:3000/api/v1/payments/webhook

# SMS Configuration
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=CHAJIPOA

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log