# AzamPay Configuration
# Get these credentials from the AzamPay developer portal
AZAMPAY_SANDBOX=true
AZAMPAY_CLIENT_ID=your_client_id_here
AZAMPAY_CLIENT_SECRET=your_client_secret_here
AZAMPAY_APP_NAME=your_app_name_here
AZAMPAY_API_KEY=your_api_key_here

# Base URL
BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chajipoa
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Logging
LOG_LEVEL=info

# Payment Providers
PAYMENT_PROVIDERS=azampay,mpesa,tigo,airtel,halo