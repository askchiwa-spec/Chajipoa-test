# ChajiPoa Tanzania Production Environment Configuration
# Specific configuration for Tanzania deployment

# Database Configuration (Tanzania-specific)
POSTGRES_DB=chajipoa_tz_production
POSTGRES_USER=chajipoa_tz_user
POSTGRES_PASSWORD=super_secure_tz_password_1234567890
POSTGRES_PORT=5432

# MongoDB Configuration (Tanzania-specific)
MONGO_DB=chajipoa_tz_production
MONGO_USER=chajipoa_tz_admin
MONGO_PASSWORD=tz_mongo_super_secure_password
MONGO_PORT=27017

# Redis Configuration (Tanzania-specific)
REDIS_PASSWORD=tz_redis_super_secure_password
REDIS_PORT=6379

# API Configuration
API_PORT=3000
NODE_ENV=production
JWT_SECRET=super_secure_tz_jwt_secret_key_with_enough_entropy_for_production_purposes

# Frontend Configuration
FRONTEND_PORT=80

# AzamPay Production Configuration (Tanzania)
AZAMPAY_API_KEY=prod_live_api_key_for_tanzania
AZAMPAY_MERCHANT_ID=tz_merchant_id_12345
AZAMPAY_BASE_URL=https://api.azampay.co.tz
AZAMPAY_CALLBACK_URL=https://api.chajipoa.co.tz/callback

# SMS Gateway (Tanzania - Local Providers)
SMS_PROVIDER=dummy_sms_provider
SMS_API_KEY=tz_sms_api_key
SMS_SENDER_ID=ChajiPoa
SMS_CALLBACK_URL=https://api.chajipoa.co.tz/sms-callback

# Email Configuration (Tanzania)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=info@chajipoa.co.tz
EMAIL_PASS=app_specific_password_for_tz
EMAIL_FROM=noreply@chajipoa.co.tz

# Geographical Settings (Tanzania-specific)
DEFAULT_COUNTRY_CODE=+255
DEFAULT_CURRENCY=TZS
TIMEZONE=Africa/Dar_es_Salaam
LOCALE=sw_TZ

# Payment Settings (Tanzania-specific)
CURRENCY_SYMBOL=TZS
MINIMUM_RENTAL_AMOUNT=500
MAXIMUM_RENTAL_AMOUNT=50000
DEPOSIT_AMOUNT=2000
TRANSACTION_FEE_PERCENTAGE=0.03  # 3% transaction fee

# Mobile Money Providers (Tanzania)
MOBILE_MONEY_PROVIDERS=Mpesa,TigoPesa,AirtelMoney,Halopesa
DEFAULT_MOBILE_MONEY_PROVIDER=Mpesa

# Device Settings (Tanzania-specific)
DEVICE_BATTERY_THRESHOLD=20
DEVICE_MAINTENANCE_INTERVAL=180
MAX_RENTAL_DURATION=24
DEFAULT_RENTAL_PRICE_PER_HOUR=500

# Station Locations (Major Tanzanian Cities)
STATION_LOCATIONS=Dar_es_Salaam,Mwanza,Arusha,Mbeya,Morogoro,Tanga,Zanzibar
DEFAULT_STATION_COMMISSION_RATE=0.15  # 15% commission to station owners

# Security Settings
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=7200  # 2 hours
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800  # 30 minutes

# CORS Configuration (Tanzania Domains)
ALLOWED_ORIGINS=https://chajipoa.co.tz,https://www.chajipoa.co.tz,https://api.chajipoa.co.tz

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_SESSION=3600
CACHE_TTL_API_RESPONSE=60

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Feature Flags
ENABLE_USSD_INTEGRATION=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_CORPORATE_ACCOUNTS=true
ENABLE_PREMIUM_SUBSCRIPTIONS=true

# Tanzania-specific Compliance
ENABLE_TAX_CALCULATION=true
TAX_RATE=0.18  # 18% VAT in Tanzania
COMPLIANCE_CHECK_REQUIRED=true
AUDIT_LOGGING_ENABLED=true

# Performance Settings
CONCURRENT_RENTALS_PER_USER=3
MAX_DEVICE_RENTAL_DURATION_HOURS=72
LOW_BALANCE_WARNING_THRESHOLD=1000