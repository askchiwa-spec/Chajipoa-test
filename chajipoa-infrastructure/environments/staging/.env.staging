# ChajiPoa Staging Environment Configuration

# Docker Registry Configuration
DOCKER_REGISTRY=ghcr.io/askchiwa-spec
GIT_COMMIT_SHA=$(git rev-parse HEAD)

# Database Configuration
POSTGRES_DB=chajipoa_staging
POSTGRES_USER=chajipoa_staging_user
POSTGRES_PASSWORD=staging_secure_password_12345
POSTGRES_HOST=staging-postgres.chajipoa.co.tz

# MongoDB Configuration
MONGO_DB=chajipoa_staging
MONGO_USER=chajipoa_staging_admin
MONGO_PASSWORD=staging_mongo_password
MONGO_HOST=staging-mongodb.chajipoa.co.tz

# Redis Configuration
REDIS_HOST=staging-redis.chajipoa.co.tz
REDIS_PASSWORD=staging_redis_password

# API Configuration
API_PORT=3000
NODE_ENV=staging
JWT_SECRET=staging_jwt_secret_key_with_enough_entropy_for_staging_purposes

# Frontend Configuration
FRONTEND_PORT=80

# AzamPay Staging Configuration
AZAMPAY_API_KEY=staging_api_key_placeholder
AZAMPAY_MERCHANT_ID=staging_merchant_id
AZAMPAY_BASE_URL=https://sandbox.azampay.co.tz

# SMS Gateway (Staging)
SMS_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SMS_AUTH_TOKEN=staging_auth_token
SMS_FROM_PHONE=+15005550006

# Email Configuration (Staging)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=staging@chajipoa.com
EMAIL_PASS=staging_app_password
EMAIL_FROM=noreply@chajipoa.com

# Feature Flags
ENABLE_DETAILED_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_DATABASE_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Security Settings
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=500
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600

# CORS Configuration
ALLOWED_ORIGINS=https://staging.chajipoa.co.tz,https://api.staging.chajipoa.co.tz

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_SESSION=1800
CACHE_TTL_API_RESPONSE=60

# Payment Settings
MINIMUM_RENTAL_AMOUNT=500
MAXIMUM_RENTAL_AMOUNT=50000
DEPOSIT_AMOUNT=2000

# Device Settings
DEVICE_BATTERY_THRESHOLD=20
DEVICE_MAINTENANCE_INTERVAL=180
MAX_RENTAL_DURATION=24

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true

# Monitoring Configuration
NEW_RELIC_LICENSE_KEY=staging_new_relic_license_key
DATADOG_API_KEY=staging_datadog_api_key